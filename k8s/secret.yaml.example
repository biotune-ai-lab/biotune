apiVersion: v1
kind: Secret
metadata:
  name: biotune-creds
type: Opaque
stringData:
  OPENAI_API_KEY: x
  NEBIUS_API_KEY: x
  LLM_MODEL: openai
  OBJECT_STORAGE_API: http://object-storage-api:59090
  CONCH_ENDPOINT: http://conch-api:54001
