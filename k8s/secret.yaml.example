apiVersion: v1
kind: Secret
metadata:
  name: biotune-creds
type: Opaque
stringData:
  OPENAI_API_KEY: your-openai-api-key-here
  NEBIUS_API_KEY: your-nebius-api-key-here
  LLM_MODEL: gpt-4o
  OBJECT_STORAGE_API: http://object-storage-api:59090
  CONCH_ENDPOINT: http://conch-api:54001
  VIRCHOW_ENDPOINT: http://virchow-api:54002
  MEDSAM_ENDPOINT: http://medsam-api:54003
  SAM_ENDPOINT: http://sam-api:54004
# Alternative kubectl command:
# kubectl create secret generic biotune-creds \
#   --from-literal=OPENAI_API_KEY='your-openai-api-key-here' \
#   --from-literal=NEBIUS_API_KEY='your-nebius-api-key-here' \
#   --from-literal=LLM_MODEL='gpt-4o' \
#   --from-literal=OBJECT_STORAGE_API='http://object-storage-api:59090' \
#   --from-literal=CONCH_ENDPOINT='http://conch-api:54001' \
#   --from-literal=VIRCHOW_ENDPOINT='http://virchow-api:54002' \
#   --from-literal=MEDSAM_ENDPOINT='http://medsam-api:54003' \
#   --from-literal=SAM_ENDPOINT='http://sam-api:54004'
